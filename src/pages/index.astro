---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).slice(0, 4);
---

<BaseLayout
  title="Martin Ruiz â€” Portafolio"
  description="Portafolio de Martin Ruiz"
>
  <section class="py-16">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl">
        Martin Ruiz
      </h1>
      <p class="mt-4 text-lg text-neutral-600 dark:text-neutral-300">
       Un crack total!!
      </p>
      <div class="mt-8 flex items-center justify-center gap-3">
        <a href="/projects" class="btn">Ver proyectos</a>
        <a href="https://www.linkedin.com/in/martin-ruizn/" class="btn-outline"
          >LinkedIn</a
        >
      </div>
    </div>
  </section>
  <section class="mt-12">
    <h2 class="mb-6 text-xl font-bold">Proyectos recientes</h2>
    <div class="grid gap-4 sm:grid-cols-2">
      {
        projects.map((p) => (
          <ProjectCard
            title={p.data.title}
            teaser={p.data.teaser}
            year={p.data.year}
            tags={p.data.tags}
            href={`/projects/${p.slug}`}
          />
        ))
      }
    </div>
  </section>
</BaseLayout>
