  <section class="mt-16">
    <h2 class="mb-6 text-xl font-bold">Proyectos recientes</h2>
    <div class="grid gap-4 sm:grid-cols-2">
      {
        padded.map((p) => (
          <ProjectCard
            title={p.title}
            teaser={p.teaser}
            year={p.year}
            tags={p.tags}
            href={p.href}
            avatar={p.avatar}
            stars={p.stars}
          />
        ))
      }
    </div>
  </section>
  <section class="mt-16">
    <div class="card p-8">
      <div
        class="flex flex-col items-start justify-between gap-6 sm:flex-row sm:items-center"
      >
        <div>
          <h2 class="text-xl font-bold">¿Hablamos?</h2>
          <p class="mt-1 text-neutral-600 dark:text-neutral-300">
            ¿Tienes una idea, proyecto o propuesta? Me encanta construir
